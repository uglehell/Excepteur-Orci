mixin ornare-item(title, description, link, imagePath, isReversed)
  article.ornare__item.ornare__item--disabled
    if isReversed
      .ornare__wrapper.ornare__wrapper--reversed
        +ornare-item-inner(title, description, link, imagePath)
    else
      .ornare__wrapper
        +ornare-item-inner(title, description, link, imagePath)

    .ornare__indicator.section__indicator.section__indicator--disabled

mixin ornare-item-inner(title, description, link, imagePath)
  .ornare__illustration
    .ornare__illustration-decor
    img.ornare__illustration-img(src= imagePath, alt='')
  .ornare__content
    .ornare__content-title= title
    .ornare__content-description= description
    +content-button('more', 'ornare', 'https://google.com')

