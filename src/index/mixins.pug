mixin content-button(value, section, link)
  a.section__content-btn.content-btn(href= link, target='_blank', class= section + '__content-btn', rel='noopener')
    button.content-btn__wrapper(aria-label='Content link')
      span.content-btn__value= value
      span.content-btn__border.content-btn__border-top
      span.content-btn__border.content-btn__border-right
      span.content-btn__border.content-btn__border-bottom
      span.content-btn__border.content-btn__border-left

mixin submit-button(value, section)
  .section__content-btn.content-btn.submit-btn(class= section + '__submit-btn')
    input.content-btn__wrapper.submit-btn__wrapper(type='button', value= value)
    span.content-btn__border.content-btn__border-top
    span.content-btn__border.content-btn__border-right
    span.content-btn__border.content-btn__border-bottom
    span.content-btn__border.content-btn__border-left

mixin bigger-content-button(value, section, link)
  a.section__content-btn.content-btn.bigger-content-btn(href= link, target='_blank', class= section + '__content-btn', rel='noopener')
    button.content-btn__wrapper(aria-label='Content link')
      span.content-btn__value= value
      span.content-btn__border.content-btn__border-top
      span.content-btn__border.content-btn__border-right
      span.content-btn__border.content-btn__border-bottom
      span.content-btn__border.content-btn__border-left
